   <form action="rectangles/api/rects" method="POST" id="add_rect">
    <div class="new_rect">
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="hidden" name="id" value="">
            <input type="text" id="email" name="email" value="" placeholder="example@gmail.com" required>
        </div>
        <div class="form-group">
            <label for="width" class="text-light">Width</label>
            <input type="text" id="width" name="width" value="" placeholder="34" required>
            <p id="p-width"></p>
        </div>
        <div class="form-group">
            <label for="height" class="text-light">Height</label>
            <input type="text" id="height" name="height" value="" placeholder="43" required>
            <p id="p-height"></p>
        </div>
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <input type="text" id="title" name="title" value="" placeholder="Joe Rectangle" required>
        </div>
        <div class="form-group">
            <label for="color" class="text-light">Color</label>
            <input type="text" name="color" value="white" placeholder="white">
        </div>
        <div class="form-group">
            <label for="description" class="text-light">Description</label>
            <input type="text" name="description" value="" placeholder="This is a description">
        </div>
        <div class="form-group">
            <label for="city" class="text-light">City</label>
            <input type="text" name="city" value="Vancouver" placeholder="Vancouver">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
        <p id="msg"></p>
    </div>
</form>

