<!-- main section -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Rectangles</a>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Rectangle</h2>
            </div>
        </div>

        <!-- include add rect form -->
           <!-- form handling -->
   <form method="POST" id="update_rect">
    <div class="update_rect">
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="hidden" name="id" value="<%= rect._id %>">
            <input type="text" name="email" value="<%= rect.email %>" required>
        </div>
        <div class="form-group">
            <label for="width" class="text-light">Width</label>
            <input type="text" name="width" value="<%= rect.width %>" required>
        </div>
        <div class="form-group">
            <label for="height" class="text-light">Height</label>
            <input type="text" name="height" value="<%= rect.height %>" required>
        </div>
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <input type="text" name="title" value="<%= rect.title %>" required>
        </div>
        <div class="form-group">
            <label for="color" class="text-light">Color</label>
            <input type="text" name="color" value="<%= rect.color %>" >
        </div>
        <div class="form-group">
            <label for="description" class="text-light">Description</label>
            <input type="text" name="description" value="<%= rect.description %>" >
        </div>
        <div class="form-group">
            <label for="city" class="text-light">City</label>
            <input type="text" name="city" value="<%= rect.city %>" >
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
<!-- form handling -->


